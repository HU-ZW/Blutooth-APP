<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPale"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.04">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="监听窗口"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:id="@+id/edit1"
                android:lines="10"
                android:textColor="#1CB825"
                android:background="#000000"
                android:textIsSelectable="true"
                android:gravity="top"/>

                <!--gravity对齐方式  top顶部对齐-->
                <!--layout_margin边缘空隙距离-->
                <!--textIsSelectable 使文本框的文本可以被复制 粘贴 全选-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_margin="5dp"
            android:layout_height="0dp"
            android:layout_weight="0.05">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="12dp">
                <Button
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:text="清除接收"
                    android:id="@+id/btnClear"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:text="接收方式"
                    android:textSize="12sp"
                    android:textColor="#000"/>
                <RadioGroup
                    android:id="@+id/rg_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">
                    <RadioButton
                        android:id="@+id/rb_HEX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="十六进制"
                        android:textSize="10sp"
                        android:textColor="#000"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/rb_decimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="字符串"
                        android:textSize="10sp"
                        android:textColor="#000"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据设置"
                    android:textColor="#FF5722"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="23dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下位机数据"
                    android:textColor="#FF5722"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.06">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据1："
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    android:padding="10dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入..."
                    android:id="@+id/edit_data1"
                    android:lines="1"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:text="0"
                    android:maxLength="5"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据1:"
                    android:textColor="#9C27B0"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_input_data1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="5dp"
            android:layout_weight="0.06">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据2："
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    android:padding="10dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入..."
                    android:id="@+id/edit_data2"
                    android:lines="1"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:text="0"
                    android:maxLength="5"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据2:"
                    android:textColor="#9C27B0"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_input_data2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="5dp"
            android:layout_weight="0.06">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据3："
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    android:padding="10dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入..."
                    android:id="@+id/edit_data3"
                    android:lines="1"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:text="0"
                    android:maxLength="5"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据3:"
                    android:textColor="#9C27B0"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_input_data3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="5dp"
            android:layout_weight="0.06">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据4："
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    android:padding="10dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入..."
                    android:id="@+id/edit_data4"
                    android:lines="1"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:text="0"
                    android:maxLength="5"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据4:"
                    android:textColor="#9C27B0"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_input_data4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="5dp"
            android:layout_weight="0.06">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="控制数据"
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    android:padding="10dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入..."
                    android:id="@+id/edit_control"
                    android:lines="1"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:text="80"
                    android:maxLength="5"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="控制数据"
                    android:textColor="#9C27B0"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_input_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0x00"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启动"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btnSynchronization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同步"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停止"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>